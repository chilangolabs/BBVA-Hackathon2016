<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_como_quieres_iniciar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chilangolabs.capitallab.ComoQuieresIniciarActivity">

    <com.chilangolabs.capitallab.OwnElements.MontSerratTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/c_mo_te_gustar_a_iniciar"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        app:font="semibold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/btnPersona"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_blue"
                android:padding="20dp"
                android:src="@drawable/account"
                tools:ignore="ContentDescription" />

            <com.chilangolabs.capitallab.OwnElements.MontSerratTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/persona"
                android:textColor="@color/colorPrimary"
                app:font="semibold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <com.chilangolabs.capitallab.OwnElements.MontSerratTextView
                android:id="@+id/txtEmpresa"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/circle_blue"
                android:gravity="center"
                android:padding="20dp"
                android:src="@drawable/domain"
                android:text="@string/icon_fondeador"
                android:textColor="@android:color/white"
                android:textSize="26sp"
                tools:ignore="ContentDescription" />

            <com.chilangolabs.capitallab.OwnElements.MontSerratTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/fondeador"
                android:textColor="@color/colorPrimary"
                app:font="semibold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
