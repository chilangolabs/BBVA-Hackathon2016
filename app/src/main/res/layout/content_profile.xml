<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.chilangolabs.capitallab.ProfileActivity"
    tools:showIn="@layout/activity_profile">

    <com.chilangolabs.capitallab.OwnElements.MontSerratTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:text="Prestamos aprobados"
        android:textColor="@color/colorPrimary"
        app:font="regular" />

    <RelativeLayout
        android:id="@+id/btnCafeteria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgCafeteria"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/cafeteria"
            android:transitionName="imgdetail"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.chilangolabs.capitallab.OwnElements.MontSerratTextView
                android:id="@+id/txtCafeteria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mi primer cafeteria"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:transitionName="nameDetail"
                app:font="regular" />

            <com.chilangolabs.capitallab.OwnElements.MontSerratTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinero necesario: $350,000"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                app:font="light" />

            <com.chilangolabs.capitallab.OwnElements.MontSerratTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fondeado por BBVA Bancomer"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                app:font="light" />

        </LinearLayout>

    </RelativeLayout>

    <com.chilangolabs.capitallab.OwnElements.MontSerratTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:text="Prestamos en revisiÃ³n"
        android:textColor="@color/colorPrimary"
        app:font="regular" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/empresa_desarrollo"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.chilangolabs.capitallab.OwnElements.MontSerratTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Escuela de desarrollo"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:font="regular" />

            <com.chilangolabs.capitallab.OwnElements.MontSerratTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dinero necesario: $350,000"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                app:font="light" />

            <com.chilangolabs.capitallab.OwnElements.MontSerratTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fondeado por BBVA Bancomer"
                android:textColor="@android:color/white"
                android:textSize="10sp"
                app:font="light" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
